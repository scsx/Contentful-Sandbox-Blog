{
  "printWidth": 100,
  "semi": true,
  "arrowParens": "avoid",
  "singleQuote": true,
  "trailingComma": "all",
  "jsxBracketSameLine": true,
  "plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"],

  "importOrder": ["^react$", "<THIRD_PARTY_MODULES>", "^@src/(.*)$", "^[./]"],

  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
